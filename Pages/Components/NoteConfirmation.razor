@using NotesWasm.Models
@if (showPopup)
{
    <div class="modal-backdrop show"></div>
    <div class="modal fade show" style="display: block;" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@Title</h5>
                </div>
                <div class="modal-body">
                    <p>@BodyContent</p>
                </div>
                <div class="modal-footer">
                    <button @onclick="Confirm" type="button" class="btn btn-primary">@ConfirmTxt</button>
                    <button @onclick="Hide" type="button" class="btn btn-danger" data-bs-dismiss="modal">@CloseTxt</button>
                </div>
            </div>
        </div>
    </div>

}

@code {
    private bool showPopup = false;

    public string BodyContent { get; set; }

    public Note CurrentNote { get; set; }

    public string Title { get; set; }

    public string ConfirmTxt { get; set; }

    public string CloseTxt { get; set; }

    [Parameter]
    public EventCallback<Note> OnConfirmed { get; set; }

    public void Show()
    {
        showPopup = true;
        _ = InvokeAsync(StateHasChanged);
    }

    public void Hide()
    {
        showPopup = false;
        _ = InvokeAsync(StateHasChanged);
    }

    private async Task Confirm()
    {
        await OnConfirmed.InvokeAsync(CurrentNote);
        Hide();
    }
}
